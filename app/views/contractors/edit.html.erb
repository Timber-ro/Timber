<%= form_for @contractor do |f| %>
  <div class="field">
    <%= f.label :profile_picture do %>
      <%= image_tag @contractor.profile_picture.url(:medium) %>
      <br />
    <% end %>
    <%= f.file_field :profile_picture, autofocus: true %>
  </div>
  <br />

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br />

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <br />

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <br />

  <div class="field">
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>

  <div class="field">
    <% for category in Category.all %>  
      <div>  
        <%= check_box_tag "contractor[category_ids][]", category.id, @contractor.categories.include?(category) %>
        <%= category.name %>
      </div>
    <% end %>  
  </div>
  <br />

  <%= f.submit %>
<% end %>
